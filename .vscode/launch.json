    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch playground.html",
            "file": "${workspaceFolder}/playground.html"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/playground.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }

    ]
}